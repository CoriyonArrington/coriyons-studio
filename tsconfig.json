{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*", "src/*"]
    },

    "types": [
      "node",
      "next",
      "@storybook/react",              // ✅ Storybook 9 component types
      "@storybook/testing-library",    // ✅ For play() interaction functions
      "@testing-library/jest-dom",     // ✅ Matchers like toBeInTheDocument()
      "vitest/globals"                 // ✅ Enables global vi/test/expect types
    ],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest-setup.ts",
    ".storybook" // ✅ Include Storybook config and decorators
  ],

  "exclude": [
    "node_modules"
  ]
}
